<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModal-title" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="registerModal-title">
                    <i data-feather="user-plus"></i> S'inscrire
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body py-5">
                <div class="step-one">
                    <button type="button"
                            class="btn btn-primary btn-lg btn-block"
                            data-role="ROLE_STUDENT">
                        Je suis un étudiant
                    </button>
                    <button type="button"
                            class="btn btn-primary btn-lg btn-block"
                            data-role="ROLE_TUTOR">
                        Je suis un parent
                    </button>
                    <button type="button"
                            class="btn btn-primary btn-lg btn-block"
                            data-role="ROLE_TEACHER">
                        Je suis un professeur
                    </button>
                </div>

                <div class="step-two">
                    <form method="post" action="/register">
                        <input type="hidden" name="role" required>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="registerLastName">Nom</label>
                                <input type="text" name="lastName" class="form-control"
                                       id="registerLastName" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="registerFirstName">Prénom</label>
                                <input type="text" name="firstName" class="form-control"
                                       id="registerFirstName" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="registerEmail">Adresse email</label>
                            <input type="email" name="email" class="form-control" id="registerEmail" required>
                        </div>
                        <div class="form-group">
                            <label for="registerBirthDate">Date de naissance</label>
                            <input type="text" class="form-control"
                                   id="registerBirthDate" required>
                            <input type="hidden" name="date_birth" id="registerHiddenBirthDate">
                        </div>
                        <div class="form-group">
                            <label for="registerPassword">Mot de passe</label>
                            <input type="password" name="password" class="form-control"
                                   id="registerPassword" required>
                        </div>
                        <p class="text-center mt-3 pt-3">
                            <button type="submit" class="btn btn-primary">S'inscrire</button>
                        </p>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <small class="form-text text-muted text-right">Déjà inscrit ?
                    <button class="btn btn-light"
                            data-toggle="modal"
                            data-target="#logInModal">Se connecter</button>
                </small>
            </div>
        </div>
    </div>
</div>