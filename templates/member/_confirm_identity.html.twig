<div class="my-5">
    <div class="card m-auto p-5 bg-light" style="width: 50rem;">
        <div class="card-body">
            <h5 class="card-title">Confirmez votre identit√© avant de poursuivre</h5>
            <form method="post" action="{{ path('member_verify_identity_action') }}">
                <div class="form-group">
                    <label for="confirmEmail" class="sr-only">Email</label>
                    <input type="text" readonly class="form-control-plaintext"
                           id="confirmEmail" value="{{ currentMember.member.email }}">
                </div>
                <div class="form-group">
                    <label for="confirmPassword" class="sr-only">Mot de passe</label>
                    <input type="password" name="password" class="form-control" id="confirmPassword"
                           placeholder="Mot de passe">
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary mb-2">Confirmer</button>
                </div>
            </form>
        </div>
    </div>
</div>