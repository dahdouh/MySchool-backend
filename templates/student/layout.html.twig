{% extends 'layout.html.twig' %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('student_index') }}">Accueil</a></li>
            <li class="breadcrumb-item active">Espace étudiant</li>
        </ol>
    </nav>
{% endblock %}

{% block content %}
    <div class="jumbotron">
        <h1 class="display-4">Espace étudiant</h1>
        <p class="lead">Bienvenue sur votre espace étudiant,
            <strong>{{ currentMember.member.firstName }} {{ currentMember.member.lastName }}</strong></p>
    </div>

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link{{ nav == 'profile' ? ' active' }}"
               href="{{ path('student_profile') }}">Mon profil</a>
        </li>
        <li class="nav-item">
            <a class="nav-link{{ nav == 'course' ? ' active' }}"
               href="{{ path("student_course_list") }}">Mes cours</a>
        </li>
        <li class="nav-item">
            <a class="nav-link{{ nav == 'forum' ? ' active' }}"
               href="{{ path("student_forum_list") }}">Forums</a>
        </li>
        <li class="nav-item">
            <a class="nav-link{{ nav == 'subscription' ? ' active' }}"
               href="{{ path('student_subscription_list') }}">Mes abonnements</a>
        </li>
        <li class="nav-item">
            <a class="nav-link{{ nav == 'account' ? ' active' }}"
               href="{{ app.session.get('identityConfirmed') ?
               path('student_account') : path('student_account_confirm_identity') }}">Mon compte</a>
        </li>
        <li class="nav-item">
            <a class="nav-link{{ nav == 'historic' ? ' active' }}"
               href="{{ path('student_historic') }}">Mon historique</a>
        </li>
    </ul>

    <div class="py-3">
        {% block student_content %}{% endblock %}
    </div>
{% endblock %}