
    <div class="form-group">
        <label for="level">À quel <strong>niveau</strong>
            souhaitez-vous vous abonner ?</label>
        <select name="levelId" class="selectpicker form-control"
                data-width="100%"
                title="Sélectionnez un niveau"
                id="level" required>
            {% for level in levelGetter.all %}
                <option value="{{ level.id }}">{{ level.name }}</option>
            {% endfor %}
        </select>
    </div>

    <div class="form-group collapse" id="subjectSelect">
        <label for="subject">À quelles <strong>matières</strong> souhaitez-vous vous abonner ?</label>
        <select name="subjectIds[]" class="selectpicker form-control"
                title="Sélectionnez une matière"
                data-width="100%"
                id="subject" multiple required>
        </select>
    </div>

    <div class="form-group" id="subjectSelect">
        <label for="duration">Quelle sera la <strong>durée</strong> de cet abonnement ?</label>
        <select name="duration" class="selectpicker form-control"
                title="Sélectionnez une durée"
                data-width="100%"
                id="duration" required>
            <option value="1">1 mois</option>
            <option value="3">3 mois</option>
            <option value="6">6 mois</option>
            <option value="12">1 an</option>
            <option value="24">2 ans</option>
        </select>
    </div>

    <div>
        <span id="subjectPrice" class="d-none">{{ subscription_subjectPrice }}</span>
        <span id="monthlyRate" class="d-none">{{ subscription_monthlyRate }}</span>
        Prix total : <strong id="subscriptionPrice">0,00</strong> €
    </div>

    <div class="text-right my-3">
        <button class="btn btn-primary" type="submit">Ajouter</button>
    </div>
</form>