{% extends 'layout.html.twig' %}

{% block title %}Associer le compte de mon enfant / Espace parent{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('index') }}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('tutor_index') }}">Espace parent</a></li>
            <li class="breadcrumb-item"><a href="{{ path('tutor_subscription_list') }}">
                    Liste des abonnements de mes enfants
                </a></li>
            <li class="breadcrumb-item active">
                Associer le compte de mon enfant
            </li>
        </ol>
    </nav>
{% endblock %}

{% block content %}

    <h1 class="text-center text-dark mb-5">Associer le compte de mon enfant</h1>

    <div class="my-3">
        <a href="{{ path('tutor_subscription_list') }}" class="btn btn-light">
            <i data-feather="arrow-left"></i>
            Retourner Ã  la liste des abonnements de mes enfants
        </a>
    </div>

    <form method="post" action="{{ path('tutor_add_student_action') }}">
        <div class="form-group">
            <label for="studentEMail">Indiquez l'adresse email du compte de votre enfant</label>
            <input type="email" name="email" id="studentEMail" class="form-control" placeholder="etudiant@gmail.com"/>
        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-success">Ajouter mon enfant</button>
        </div>
    </form>

{% endblock %}